<!doctype html>
<html lang="en">
    <head>
        <meta name="abuseipdb-verification" content="3IuG6dik" />
        <link rel='stylesheet' href="{{ url_for('static', filename='style.css')}}"/>
        <title>sleep.site :: {{ title }}</title>
    </head>
    <body>
        <div id="wrapper">
            <header>
                <div id="externallinks">
                    <nav>
                        <ul>
                            <li><a href="/discord" target="_self">Discord</a></li>
                            <li><a href="https://github.com/Sleepdealr/" target="_blank">Github</a></li>
                            <li><a href="https://last.fm/user/Sleepdealr/" target="_blank">Last.fm</a></li>
                            <li><a href="https://steamcommunity.com/id/Sleepdealr" target="_blank">Steam</a></li>
                        </ul>
                    </nav>
                </div>
                <div id="headerflex">
                    <div id="headers">
                        <a href="/" id="TheTitle">
                            <h1>{{ title }}</h1>
                        </a>
                        <nav id="articles">
                            <ul>
                                <li>sample article</li>
                            </ul>
                        </nav>
                    </div>
                    <a href="/">
                        <img alt="{{ image[0] }}" src="{{ image[1] }}">
                    </a>
                </div>
            </header>
            {% if thought %}
                <aside>
                    <h4>{{dt}}</h4>
                    <h5>This category:</h5>
                    <ul>
                        <li>
                            <b><a href="{{'/articles#'+category.replace(' ', '_')}}">{{ category }}</a></b>
                        </li>
                    </ul>
                    <h5>Related articles:</h5>
                    <ul>
                        {% for id_, title, dt, category in related %}
                            <li>
                                <a href="{{'/article?id=%i' % id_ }}">{{ title }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                    <h5>Other categories:</h5>
                    {% for category_name in othercategories %}
                        <ul>
                            <li>
                                <a href="{{'/articles#'+category_name.replace(' ', '_')}}">{{ category_name }}</a>
                            </li>
                        </ul>
                    {% endfor %}
                </aside>
            {% endif %}
            <div id="content">
                {% block content %}{% endblock %}
            </div>
            <footer>
                <p>
                    this site is javascript free :&#41;
                </p>
            </footer>
        </div>
    </body>
</html>
